<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    tools:context=".Pantalla2Activity">

  <TextView
      android:id="@+id/txt_recibido_pantalla2"
      android:layout_width="362dp"
      android:layout_height="115dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="52dp"
      android:layout_marginEnd="16dp"
      android:background="#FFFFFF"
      android:backgroundTint="@color/white"
      android:text="TextView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/edt_respuesta_pantalla2"
      android:layout_width="218dp"
      android:layout_height="50dp"
      android:layout_marginStart="31dp"
      android:layout_marginEnd="23dp"
      android:background="@color/white"
      android:ems="10"
      android:hint="respuesta"
      android:inputType="textPersonName"
      app:layout_constraintBottom_toBottomOf="@+id/bt_respuesta_pantalla2"
      app:layout_constraintEnd_toStartOf="@+id/bt_respuesta_pantalla2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/bt_respuesta_pantalla2" />

  <Button
      android:id="@+id/bt_respuesta_pantalla2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="82dp"
      android:onClick="enviar_respuesta_pantalla1"
      android:text="responder"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>